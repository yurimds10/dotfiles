include ~/.config/i3/autostart.conf
include ~/.config/i3/keybindings.conf

set $term kitty

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: JetBrainsMono Nerd Font Mono Bold 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# Set a default border color (fallback color)
for_window [class=".*"] border pixel 1.75
gaps outer 2
gaps inner 5
for_window [class=".*"] border #7f9e65

hide_edge_borders both

# Gruvbox Dark border colors
client.focused          #458588 #458588 #ebdbb2 #458588 #ebdbb2
client.focused_inactive #3c3836 #3c3836 #a89984 #3c3836 #a89984
client.unfocused        #3c3836 #3c3836 #a89984 #3c3836 #a89984
client.urgent           #cc241d #cc241d #ebdbb2 #cc241d #ebdbb2
client.placeholder      #282828 #282828 #a89984 #282828 #a89984
